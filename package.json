{
  "name": "noeidelon",
  "version": "0.0.0",
  "type": "module",
  "main": "./hack/build.ts",
  "scripts": {
    "build": "bun $BUNFLAGS .",
    "build:watch": "MINIFY=false nodemon -e ts,js,frag,vert,glsl,ply,png",
    "serve": "serve ./html",
    "dev": "run-p serve build:watch"
  },
  "devDependencies": {
    "bun-types": "latest",
    "npm-run-all2": "^6.1.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5"
  },
  "peerDependencies": {
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "esbuild-plugin-glsl": "^1.2.2",
    "gl-matrix": "^3.4.3",
    "glob": "^10.3.12",
    "serve": "^14.2.3",
    "typescript": "^5.4.5"
  },
  "nodemonConfig": {
    "ignore": [
      "html/",
      "README.md",
      "src/meshes/**/*.ts"
    ],
    "delay": 1000,
    "exec": "bun run . --"
  }
}
